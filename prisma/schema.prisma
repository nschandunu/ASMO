generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id                   String              @id @db.Uuid
  username             String              @unique
  role                 Role                @default(USER)
  xp_points            Int                 @default(0)
  sustainability_score SustainabilityScore @default(STABLE)
  attributes           Json
  avatar_url           String?
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  auditLogs            AuditLog[]
  chatroom_member      chatroom_member[]
  message              message[]
  petitions            Petition[]
  posts                Post[]
  transactions         Transaction[]
  userTaskProgress     UserTaskProgress[]

  @@map("profiles")
}

model CityState {
  id           String   @id @db.Uuid
  mood         CityMood
  health_stats Json
  last_updated DateTime @updatedAt
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("city_states")
}

model CityMemory {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  event_type   String
  description  String
  impact_score Int
  created_at   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("city_memories")
}

model Task {
  id                String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title             String
  description       String
  category          String
  difficulty        TaskDifficulty
  points_reward     Int
  verification_type VerificationType
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  userTaskProgress  UserTaskProgress[]

  @@map("tasks")
}

model UserTaskProgress {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String     @db.Uuid
  task_id      String     @db.Uuid
  status       TaskStatus @default(PENDING)
  proof_data   String?
  completed_at DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  task         Task       @relation(fields: [task_id], references: [id], onDelete: Cascade)
  user         Profile    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, task_id])
  @@map("user_task_progress")
}

model Petition {
  id                    String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  creator_id            String         @db.Uuid
  title                 String
  description_encrypted String
  location_data         String
  support_count         Int            @default(0)
  status                PetitionStatus @default(OPEN)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  creator               Profile        @relation(fields: [creator_id], references: [id], onDelete: Cascade)

  @@map("petitions")
}

model Post {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  author_id       String   @db.Uuid
  content         String
  image_url       String?
  sentiment_score Float?
  sdg_tag         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  author          Profile  @relation(fields: [author_id], references: [id], onDelete: Cascade)

  @@map("posts")
}

model Voucher {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title        String
  cost_points  Int
  code         String        @unique
  stock        Int
  expiry_date  DateTime
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@map("vouchers")
}

model Transaction {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String   @db.Uuid
  voucher_id   String   @db.Uuid
  points_spent Int
  redeemed_at  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         Profile  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  voucher      Voucher  @relation(fields: [voucher_id], references: [id])

  @@map("transactions")
}

model AuditLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  admin_id  String   @db.Uuid
  action    String
  target_id String?  @db.Uuid
  details   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admin     Profile  @relation(fields: [admin_id], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

model Report {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  report_type  String
  file_url     String
  generated_at DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("reports")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model chatroom {
  id              String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at      DateTime          @default(now()) @db.Timestamptz(6)
  name            String            @db.VarChar
  is_public       Boolean
  chatroom_member chatroom_member[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model chatroom_member {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  member_id   String   @db.Uuid
  chatroom_id String   @db.Uuid
  chatroom    chatroom @relation(fields: [chatroom_id], references: [id], onDelete: Cascade)
  profiles    Profile  @relation(fields: [member_id], references: [id], onDelete: Cascade)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model message {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  text       String?
  author_id  String?  @db.Uuid
  profiles   Profile? @relation(fields: [author_id], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum SustainabilityScore {
  CRITICAL
  CONCERNING
  DEVELOPING
  STABLE
  IMPROVING
  EFFICIENT
  LOW_IMPACT
  POSITIVE_IMPACT
  LEADING
}

enum TaskDifficulty {
  EASY
  MEDIUM
  HARD
}

enum VerificationType {
  MANUAL_REVIEW
}

enum TaskStatus {
  PENDING
  SUBMITTED
  VERIFIED
  REJECTED
}

enum PetitionStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED
  REJECTED
}

enum CityMood {
  HAPPY
  ANGRY
  NEGLECTED
  NEUTRAL
}
